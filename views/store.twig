<html>
<head>
    <title>Shoe Store Database</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
    <div class='container'>
        <h1>{{ store.getStorename }}</h1>

        {% if brands is not empty %}
            <p>Here are all Brands this Store carries:</p>
            <ul>
                {% for brand in brands %}
                    <li>{{ brand.getBrandname }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <h4>Add a Brand to this Store:</h4>

        <form action='/add_brands' method='post'>
            <input id='store_id' name='store_id' type='hidden' value='{{ store.getId }}'>
            <label for='store_id'>Select a Brand</label>
            <select id='brand_id' name='brand_id' type='text'>
                {% for brand in all_brands %}
                    <option value='{{ brand.getId }}'>{{ brand.getBrandname }}</option>
                {% endfor %}
            </select>
            <button type='submit'>Add Brand</button>
        </form>
        <p><a href='/stores/{{ store.getId }}/edit'>Edit this Store</a></p>
        <p><a href='/'>Home</a></p>
    </div>
</body>
</html>
